<?xml version="1.0"?>
<package>
    <name>Retailred_Storefront</name>
    <channel>community</channel>
    <summary>retail.red plugin for Magento 1</summary>
    <description>This plugin enables merchants to easily offer click &amp; reserve functionality in their Magento 1 Shop.</description>
    <license>Apache License</license>
    <license_uri/>
    <version>1.0.0</version>
    <date>2021-03-31</date>
    <stability>stable</stability>
    <notes>Retailred Storefront Module</notes>
    <authors>
        <name>
            <name>Shopgate GmbH</name>
            <user>Shopgate</user>
            <email>interfaces@shopgate.com</email>
        </name>
    </authors>
    <depends_php_min>5.6.0</depends_php_min>
    <contents>
        <target name="magecommunity">
            <dir name="Retailred">
                <dir name="Storefront">
                    <dir name="Block">
                        <file name="Product.php"/>
                    </dir>
                    <dir name="etc">
                        <file name="adminhtml.xml"/>
                        <file name="config.xml"/>
                        <file name="system.xml"/>
                    </dir>
                    <dir name="Helper">
                        <file name="Data.php"/>
                    </dir>
                    <dir name="Model">
                        <dir name="Source">
                            <file name="Apistage.php"/>
                            <file name="Countries.php"/>
                            <file name="Render.php"/>
                            <file name="Rendermode.php"/>
                            <file name="Unitsystem.php"/>
                        </dir>
                        <file name="Config.php"/>
                    </dir>
                </dir>
            </dir>
        </target>
        <target name="magedesign">
            <dir name="frontend">
                <dir name="base">
                    <dir name="default">
                        <dir name="layout">
                            <file name="retailred_storefront.xml"/>
                        </dir>
                        <dir name="template">
                            <dir name="retailred_storefront">
                                <file name="elements.phtml"/>
                                <file name="js_init.phtml"/>
                            </dir>
                        </dir>
                    </dir>
                </dir>
            </dir>
        </target>
        <target name="mageetc">
            <dir name="modules">
                <file name="Retailred_Storefront.xml"/>
            </dir>
        </target>
        <target name="magelocale">
            <dir name="de_DE">
                <file name="Retailred_Storefront.csv"/>
            </dir>
        </target>
    </contents>
    <dependencies>
        <required>
            <php>
                <min>5.6.0</min>
            </php>
        </required>
    </dependencies>
</package>
